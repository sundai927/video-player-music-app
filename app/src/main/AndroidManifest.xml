    package="edu.ds4jb.videoplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".application.AppComponent">
        <activity android:name=".player.PlayerActivity">
        </activity>
        <activity android:name=".login.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".users.UserDisplayActivity" />
        <activity android:name=".videos.VideoDisplayActivity"/>
        <activity android:name=".home.HomeActivity"/>
        <activity android:name=".login.CreateAccountActivity"/>
        <activity android:name=".record.RecordActivity"/>
        <activity android:name=".myvideos.MyVideosDisplayActivity"/>

    </application>

</manifest>